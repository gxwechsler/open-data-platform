# Open Data Platform - Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_USER=opendata
POSTGRES_PASSWORD=opendata_secret
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=open_data

# =============================================================================
# pgAdmin (optional - for database management UI)
# =============================================================================
PGADMIN_EMAIL=admin@opendata.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# =============================================================================
# API Settings
# =============================================================================
# World Bank API (no authentication required)
WORLD_BANK_API_BASE=https://api.worldbank.org/v2

# IMF API (no authentication required)
IMF_API_BASE=https://dataservices.imf.org/REST/SDMX_JSON.svc

# Request settings
REQUEST_TIMEOUT=60
MAX_RETRIES=3

# =============================================================================
# Data Settings
# =============================================================================
DEFAULT_START_YEAR=1960
DEFAULT_END_YEAR=2024
